<body class="dashboard warning-theme danger-complement primary-logo-demo using-loader">
    <!-- start of navbar -->
    <%= render 'layouts/navigation' %>
    <!-- end of navbar -->

    <!-- start of sidebar -->
   <%= render 'layouts/sidebar' %>
    <!-- end of sidebar -->

    <!--Start of Main Container-->
    <div class="main container-fluid">
        <!--Start of Content Header-->
        <section class="content-header">
            <h1>General</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Account</a></li>
                <li class="breadcrumb-item active">Settings</li>
            </ol>
            <hr/>
        </section>
        <!--End of Content Header-->
        <!--Start of Main Content-->
        <section class="content">
            <!--Start of 1st row-->
            <div class="row center">
                <div class="col-md-10">
                    <!--Start of Vertical Form-->
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,multipart: true }) do |f| %>
                    <%= devise_error_messages! %>
                    <div class="card">
                        <div class="card-header">
                            <h4>Settings</h4>
                        </div>
                        <div class="card-block">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                     <%= f.text_field :name, class:'form-control', placeholder:'Type Your Name' %>
                                </div>
                                <div class="form-group">
                                    <label for="email">E-Mail</label>
                                     <%= f.email_field :email, autofocus: true, class:'form-control' , placeholder:'Type Your Email' %>
                                </div>
                                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                  <div class="form-group" >Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                <% end %>
                                <div class="form-group">
                                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                                  <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Type Your Password' %>
                                </div>
                                <div class="form-group">
                                  <%= f.label :password_confirmation %><br />
                                  <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'Type Your Password Confirmation' %>
                                </div>
                                <div class="form-group">
                                  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                                  <%= f.password_field :current_password, autocomplete: "off", class:'form-control', placeholder:'Type Your Current Password' %>
                                </div>
                                <div class="form-group">
                                    <label for="uploadCV">Upload Avatar</label>
                                    <%= f.file_field :avatar %>
                                </div>
                        </div>
                        <div class="button-action form-group text-md-right">
                            <button type="button" class="btn btn-default">Cancel</button>
                            <%= f.submit 'Submit', class:'btn btn-info' %>
                        </div>
                    </div>
                    <% end %>
                    <!--End of Vertical Form-->

                </div>
                <!--end-col-md-6-->
                <!--start-col-md-6-->
            </div>
            <!--End of 1st row-->
        </section>
        <!--End of Main Contenr-->
    </div>

    <!--End of Main Container-->
    <%= render 'layouts/configuration' %>
</body>