<body class="registration warning-theme danger-complement primary-logo-demo">   
    <!--Start of Card Center-->
    <div class="wrapper-card">
        <div class="card centered-signup-card signup-lg">
            <div class="card-header text-xs-center">
                <a href="index-2.html"><%= image_tag "info-logo.png", alt:'n-cms' %></a>
            </div>
            <div class="card-block">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <label>Email</label>
                            <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Email',required:'true' %>
                        </div>
                    </fieldset>
                    <div class="button-action text-xs-right">
                        <%= f.submit "Send me reset password instructions", class:'btn btn-info btn-block' %>
                    </div>
                    	Have an account already? <%= link_to 'Log In', new_user_session_path, class:'text-info' %>
                <% end %>
            </div>
        </div>
    </div>
